<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-3"
            <form action="/donation" method="POST">
                <fieldset>
                    <legend>Add a New Donation</legend>
                    <div class="form-group">
                        <label for="charity">Charity</label>
                        <input id="charity" class="form-control" type="text" name="charity" value="">
                    </div>
                    <div class="form-group">
                        <label for="amount">Amount</label>
                        <input id="amount" class="form-control" type="number" name="amount" value="">
                    </div>
                    <div class="form-group">
                        <label for="date">Date</label>
                        <input id="date" class="form-control" type="date" name="date" value="">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Save Donation</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
