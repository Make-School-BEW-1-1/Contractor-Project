<fieldset>
    <div class="form-group">
        <label for="charity">Charity</label>
        {{#if this.charityName}}
        <input class="form-control" disabled type="text" name="" value="{{this.charityName}}">
        <input type="hidden" name="charity.charityName" value="{{this.charityName}}">
        <input type="hidden" name="charity.currentRating.rating" value="{{this.currentRating.rating}}">
        <input type="hidden" name="charity.tagline" value="{{this.tagline}}">
        <input type="hidden" name="charity.websiteURL" value="{{this.websiteURL}}">
        {{else}}
        <input type="text" id="charity.charityName" class="form-control" name="charity.charityName" value="">
        {{/if}}
    </div>
    <div class="form-group">
        <label for="amount">Amount</label>
        <input id="amount" class="form-control" type="number" name="amount" value="">
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input id="date" class="form-control" type="date" name="date" value="">
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save Donation</button>
    </div>
</fieldset>
